pipeline {
    agent any 
    stages {
        stage('Install NPM modules') {
            steps {
                sh '''
                    npm install 
                '''
            }
        }
        stage('Lint') {
            steps {
                sh '''
                    npm run lint
                '''
            }
        }
        stage ('Build') {
            steps {
                sh '''
                    npm run build
                '''
            }
        }
        stage ('Archive & Publish build') {
            steps {
                archiveArtifacts artifacts: 'dist/**/*', fingerprint: true, onlyIfSuccessful: true
            }
        }
    }
}