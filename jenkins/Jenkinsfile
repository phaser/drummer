pipeline {
    agent any 
    stages {
        stage('Install NPM modules') {
            steps {
                sh '''
                    npm install 
                '''
            }
        }
        stage('Lint') {
            steps {
                sh '''
                    npm run lint
                '''
            }
        }
        stage ('Build') {
            steps {
                sh '''
                    npm run build
                '''
            }
        }
        stage ('Archive & Publish build') {
            steps {
                sh '''
                    tar -C dist -czvf drummer-${BUILD_NUMBER}.tar.gz .
                '''
                archiveArtifacts artifacts: 'drummer-*.tar.gz', fingerprint: true, onlyIfSuccessful: true
            }
        }
    }
}